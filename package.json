{
  "name": "yarm",
  "version": "1.0.0",
  "description": "Yet Another Rom Manager",
  "author": "Drakmyth <shaun.hamman@gmail.com>",
  "license": "MIT",
  "main": "./out/electron.bundle.js",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build:watch": "npm run build -- --watch",
    "start": "electron ./out/electron.bundle.js",
    "start:watch": "electronmon ./out/electron.bundle.js",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.drakmyth.yarm",
    "files": "./out/*",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "portable"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "css-loader": "^6.7.1",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@szhsin/react-menu": "^3.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "style-loader": "^3.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Drakmyth/yarm.git"
  },
  "bugs": {
    "url": "https://github.com/Drakmyth/yarm/issues"
  }
}
