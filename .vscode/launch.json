{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "program": "${workspaceRoot}/src/electron/main.ts",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Electron: Renderer",
            "type": "pwa-msedge",
            "request": "attach",
            "port": 9223,
            "timeout": 30000,
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}
